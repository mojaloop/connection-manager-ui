{
    "compilerOptions": {
      "target": "es6",                           // ES6 output (you can change this based on your needs)
      "module": "commonjs",                       // Use CommonJS for module resolution (required for Jest)
      "esModuleInterop": true,                    // Enable default import syntax for modules
      "skipLibCheck": true,                       // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true,   // Enforce consistent casing of file names
      "strict": true,                             // Enable all strict type-checking options
      "moduleResolution": "node",                 // Ensure compatibility with node.js module resolution
      "jsx": "react",                             // For JSX files, set this to 'react'
      "baseUrl": "./",                            // Base directory for resolving non-relative modules
      "paths": {                                  // Configure paths for module resolution
        "src/*": ["src/*"]
      }
    },
    "include": [
      "src/**/*",  // Include all files in the 'src' folder
    ],
    "exclude": [
      "node_modules"  // Exclude 'node_modules' from being processed by TypeScript
    ]
  }
  